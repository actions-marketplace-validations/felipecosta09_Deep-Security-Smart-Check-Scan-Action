{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2018",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "declaration": false,
    // adds "use strict" to the top of files
    "alwaysStrict": true,
    "outDir": "./build"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
